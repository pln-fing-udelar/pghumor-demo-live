<ul class="list-group" id="tweets-list">
    <li class="list-group-item">
      <strong>
        <span id="current-title" class="title">
            Humor en vivo seg√∫n el clasificador <i class="fa fa-play"></i>
        </span>
        <img src="assets/live.gif" />
      </strong>
    </li>
    <div id="tweets-div">
      <% @tweets.each do |tweet| %>
          <li class="list-group-item tweet" data-account-type="<%= tweet.account.account_type %>" data-positive-votes="<%= tweet.positive_votes %>" data-negative-votes="<%= tweet.negative_votes %>" data-avg-stars="<%= number_to_human(tweet.star_average) %>" rel="popover" data-placement="left">
            <div class="row">
              <div class="col-sm-1 col-md-1">
                <img class="img-user" src="<%= tweet.account.image_url  %>"/>
              </div>
              <div class="col-sm-11 col-md-11">
                <div class="tweet__header">
                  <p class="tweet__item username tweet__item tweet__item--left">@<%= tweet.account.name %></p>
                </div>
                <p class="tweet__text"><%= tweet.text %></p>
              </div>
            </div>
          </li>
      <% end %>
    </div>
</ul>
